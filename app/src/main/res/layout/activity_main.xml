<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@drawable/login3"
    tools:context=".MainActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="40dp"
        android:background="@drawable/custom_editex"
        app:cardCornerRadius="40dp"
        app:cardElevation="40dp">
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:padding="25dp"
            android:background="@drawable/degradado">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="89dp"
                android:drawableTop="@drawable/baseline_person_24"
                android:textAlignment="center"
                android:textColorHighlight="@color/RojoFuerte"
                android:textSize="24sp"
                android:textStyle="bold" />
            
            <EditText
                android:id="@+id/usuario"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/custom_editex"
                android:drawableLeft="@drawable/baseline_person_pin_24"
                android:drawablePadding="10dp"
                android:hint="Ingrese el usuario"
                android:textColorHighlight="@color/white"
                android:textColor="@color/white"
                android:inputType="text"
                android:textColorHint="@color/black">

            </EditText>

            <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/custom_editex"
                android:drawableLeft="@drawable/twotone_lock_person_24"
                android:drawablePadding="10dp"
                android:hint="Ingrese la contraseÃ±a"
                android:textColor="@color/white"
                android:inputType="textPassword"
                android:textColorHint="@color/black">
            </EditText>

            <Button
                android:id="@+id/btnIngresar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:backgroundTint="@color/RojoFuerte"
                android:text="Ingresar"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:textSize="20sp"
                />
        </LinearLayout>
    </androidx.cardview.widget.CardView>



</LinearLayout>